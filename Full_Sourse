//Функция проверки.
int Cin(long min, long max) {
	long a;
	//Проверяем рациональность числа и ввод лишних символов 
	while (!(cin >> a) || (cin.peek() != '\n')) {
		cin.clear();
		while (cin.get() != '\n');
		cout << "Явно присутствуют некорректные для данного типа символы. Проверьте корректность." << endl;
	}

	//Исключение нуля
	if (a == 0) {
		cout << "Введите число отличное от нуля" << endl;
		a = Cin(min, max);
	}
	//Верхний предел
	if (a > max) {
		cout << "Число выходит за промежуток. По условию a =< " << max << " и а >= " << min << endl;
		a = Cin(min, max);
	}
	//Нижний Предел
	if (a < min) {
		cout << "Число выходит за промежуток. По условию a =< " << max << " и а >= " << min << endl;
		a = Cin(min, max);
	}
	//Исключение отрицательных чисел
	if (a < 0) {
		cout << "Вы ввели (" << a << ") Возьмем все-таки положительное, то есть " << abs(a) << endl;
		a = abs(a);
	}

	return a;
}
//Функция проверки, пропускающая ноль
int CIN(long min, long max) {
	long a;
	//Проверяем рациональность числа и ввод лишних символов 
	while (!(cin >> a) || (cin.peek() != '\n')) {
		cin.clear();
		while (cin.get() != '\n');
		cout << "Явно присутствуют некорректные для данного типа символы. Проверьте корректность." << endl;
	}

	//Верхний предел
	if (a > max) {
		cout << "Число выходит за промежуток. По условию a =< " << max << " и а >= " << min << endl;
		a = CIN(min, max);
	}
	//Нижний Предел
	if (a < min) {
		cout << "Число выходит за промежуток. По условию a =< " << max << " и а >= " << min << endl;
		a = CIN(min, max);
	}
	//Исключение отрицательных чисел
	if (a < 0) {
		cout << "Вы ввели (" << a << ") Возьмем все-таки положительное, то есть " << abs(a) << endl;
		a = abs(a);
	}

	return a;
}
//Функция проверки пропускающая ноль и отрицательные числа.
int CIn(long min, long max) {
	long a;
	//Проверяем рациональность числа и ввод лишних символов 
	while (!(cin >> a) || (cin.peek() != '\n')) {
		cin.clear();
		while (cin.get() != '\n');
		cout << "Явно присутствуют некорректные для данного типа символы. Проверьте корректность." << endl;
	}

	//Верхний предел
	if (a > max) {
		cout << "Число выходит за промежуток. По условию a =< " << max << " и а >= " << min << endl;
		a = CIn(min, max);
	}
	//Нижний Предел
	if (a < min) {
		cout << "Число выходит за промежуток. По условию a =< " << max << " и а >= " << min << endl;
		a = CIn(min, max);
	}

	return a;
}
//Функция проверки, для дробных.
long double CiN(long min, long max) {
	long double a;
	//Проверяем рациональность числа и ввод лишних символов 
	while (!(cin >> a) || (cin.peek() != '\n')) {
		cin.clear();
		while (cin.get() != '\n');
		cout << "Явно присутствуют некорректные для данного типа символы. Проверьте корректность." << endl;
	}

	//Исключение нуля
	if (a == 0) {
		cout << "Введите число отличное от нуля" << endl;
		a = CiN(min, max);
	}
	//Верхний предел
	if (a > max) {
		cout << "Число выходит за промежуток. По условию a =< " << max << " и а >= " << min << endl;
		a = CiN(min, max);
	}
	//Нижний Предел
	if (a < min) {
		cout << "Число выходит за промежуток. По условию a =< " << max << " и а >= " << min << endl;
		a = CiN(min, max);
	}
	//Исключение отрицательных чисел
	if (a < 0) {
		cout << "Вы ввели (" << a << ") Возьмем все-таки положительное, то есть " << abs(a) << endl;
		a = abs(a);
	}

	return a;
}

