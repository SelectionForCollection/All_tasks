void stupid(int* a, int n) {
	int i = 0;
	while (i < n - 1) {
		if (a[i + 1] < a[i]) {
			swap(a[i], a[i + 1]);
			i = 0;
		}
		else
			i++;
	}
}
int Stupid_main() {
	cout << endl;
	int n;

	cout << "N = ";
	n = Cin(0, 2147483647);

	int* arr = new int[n];

	for (int i = 1; i <= n; i++) {
		cout << "Введите "<<i <<"-й элемент: ";
		arr[i] = CIn(-2147483647, 2147483647);
	}

	stupid(arr, n);

	for (int i = 1; i <= n; i++) {
		cout << arr[i] << " ";
	}
	cout << endl;
	return 0;
}

string O1() {
	cout << endl;
	string str;
	char d;

	cin.clear(); cin.ignore();

	cout << "Введите строку: "; getline(cin, str);
	cout << endl;
	cout << "Введите символ замены: "; cin >> d;

	for (int i = 1; i <= str.length(); i++) {
		if (str[i] == ' ') {
			str[i] = d;
			i--;
		}
	}

	cout << str << endl;
	return str;
}
string O2() {
	cout << endl;
	string st;
	char ds;
	int t;

	cin.clear(); cin.ignore();

	cout << "Введите строку: "; getline(cin, st);
	cout << endl;
	cout << "Хотите удалить пробел?\n 1 - да\n 2 - нет\nНомер - "; t = Cin(0,2); cout << endl;
	if (t == 1) {
		for (int i = 0; i <= st.length(); i++) {
			if (st[i] == ' ') {
				st.erase(i, 1);
				i--;
			}
		}
	}
	else {
		cout << "Введите символ, который надо удалить: "; cin >> ds; cout << endl;
		cout << "Сохранить пробел?\n 1 - да\n 2 - нет\nНомер - "; t = Cin(0,2); cout << endl;
		if (t == 1) {
			for (int i = 0; i <= st.length(); i++) {
				if (st[i] == ds) {
					st.erase(i, 1);
					i--;
				}
			}
		}
		else {
			for (int i = 0; i <= st.length(); i++) {
				if ((st[i] == ' ') or (st[i] == ds)) {
					st.erase(i, 1);
					i--;
				}
			}
		}
	}

	cout << st << endl;
	return st;
}
