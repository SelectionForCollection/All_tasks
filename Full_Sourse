int Balls() {
	cout << endl;
	cout <<"Введите количество шариков: ";
	long long n; n = Cin(0,INT_MAX);
	long long* k = new long long[n];
	k[0] = 0; k[1] = 1;
	for (int i = 2; i <= n; i++) {
		k[i] = (k[i - 1] + k[i - 2]) * (i - 1);
	}
	cout << k[n] << endl;
	return 0;
}

