								if ((s[y] == 'L') & (s[y + 1] == 'M')) {
									res = 1000 - res;
								}
							}
						}
					}
				}
			}
		}

		//------------------------------------------------------------Для cта(C)
		if ((s[y] == 'C') & (s[y + 1] == 'I')) {
			res = res + 1;
